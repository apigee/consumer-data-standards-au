<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ExtractVariables async="false" continueOnError="false" enabled="true" name="EV-StoreTokenRequestDetails">
    <!-- This policy is also reused in a refresh token request, even though in that case not all  the information is required, just the authorization header and grant_type -->
    <DisplayName>EV-StoreTokenRequestDetails</DisplayName>
    <Properties/>
    <FormParam name="grant_type">
        <Pattern>{grant_type}</Pattern>
    </FormParam>
    <FormParam name="code">
        <Pattern>{code}</Pattern>
    </FormParam>
    <FormParam name="redirect_uri">
        <Pattern>{redirect_uri}</Pattern>
    </FormParam>
    <Header name="Authorization">
        <Pattern>{authorization_header}</Pattern>
    </Header>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <Source clearPayload="false">request</Source>
    <VariablePrefix>TokenRequestParams</VariablePrefix>
</ExtractVariables>