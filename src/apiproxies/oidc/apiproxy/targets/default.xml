<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>DisablePathCopy</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="Revoke Token">
            <Description/>
            <Request>
                <Step>
                    <Name>AssignIDPRevokeUrl</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token/revocation") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Userinfo">
            <Description/>
            <Request>
                <Step>
                    <Name>AssignIDPUserinfoUrl</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/me") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://cdr.okta.com/oauth2/default/v1</URL>
    </HTTPTargetConnection>
</TargetEndpoint>