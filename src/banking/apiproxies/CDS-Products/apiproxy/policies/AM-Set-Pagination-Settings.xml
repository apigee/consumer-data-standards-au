<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-Set-Pagination-Settings">
    <DisplayName>AM-Set-Pagination-Settings</DisplayName>
    <Properties/>
    <AssignVariable>
        <!-- Set to true if backend returns the full response 
             and the proxy should do the pagination. Set to false if
             the backend will return the correct page -->
        <Name>pagination.doPagination</Name>
        <Value>true</Value>
    </AssignVariable>
    <AssignVariable>
        <!-- Set to true so that the right links are generated in
             the meta object of the response 
             This parameter should be set to true every time an endpoint 
             response needs to include pagination information -->
        <Name>generatePaginationLinksAndMeta</Name>
        <Value>true</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>