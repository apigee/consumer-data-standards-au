 // Check that x-fapi-customer-ip-address contains a valid IP address
 // and in that case, set isCustomerPresent to true
 
 var foundValidIPAddrArray = context.getVariable("request.header.x-fapi-customer-ip-address").match(/^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/g);
 var isCustomerPresent = (foundValidIPAddrArray != null) && (foundValidIPAddrArray.length === 1);
 context.setVariable("isCustomerPresent",isCustomerPresent);
 
 