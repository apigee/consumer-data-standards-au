        <Set>
            <Headers/>
            <Payload contentType="application/json">{
  “errors”: [
    {
      “code”: “{errorResponseCode}”,
      “title”: “{errorTitle}”,
      “detail”: “{errorDetail}”
    }
  ]
}</Payload>
